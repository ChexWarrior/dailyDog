{
  "manifest_version": 2,
  "name": "Daily Dog",
  "version": "1.0",
  "homepage_url": "https://github.com/ChexWarrior/dailyDog",
  "description": "Shows a picture of a cute dog with a quote on a regular interval",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "alarms",
    "tabs"
  ],
  "icons": {
    "48": "icons/dog.svg",
    "96": "icons/dog.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/"
      ],
      "js": [
        "main.js"
      ]
    }
  ]
}
